// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Question {
  id          String  @id @default(uuid())
  description String
  description_image String?
  type        String
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  number Int 
  quiz Quiz @relation(fields: [quizId], references: [id])
  quizId String
  surveyPage SurveyPage @relation(fields: [surveyPageId], references: [id])
  surveyPageId String
  options QuestionOption[]
  questionResponses QuestionResponse[]
  questionAnswers QuestionAnswer[]
}

model QuestionOption {
  id String   @id @default(uuid())
  description String
  description_image String?
  question Question @relation(fields: [questionId], references: [id])
  questionId String
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  questionAnswer QuestionAnswer[]
}

model Quiz {
  id          String  @id @default(uuid())
  title       String
  category    String
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  questions Question[]
  collectors SurveyCollector[]
  surveyPages SurveyPage[]
  surveyResponses SurveyResponse[]
  creator User @relation(fields: [creatorId], references: [id])
  creatorId String
}

model SurveyPage {
  id          String  @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  survey Quiz @relation(fields: [surveyId], references: [id])
  surveyId String
  number Int
  questions Question[]
}

model SurveyCollector {
  id          String  @id @default(uuid())
  type        String
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  status      String
  survey Quiz @relation(fields: [surveyId], references: [id])
  name String
  surveyId String
  deleted Boolean @default(false)
  responses SurveyResponse[]
}

model SurveyResponse {
  id          String  @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  collector SurveyCollector @relation(fields: [collectorId], references: [id])
  survey Quiz @relation(fields: [surveyId], references: [id])
  surveyId String
  collectorId String
  status String
  ip_address String
  display_number Int
  questionResponses QuestionResponse[]
}

model QuestionResponse {
  id          String  @id @default(uuid())
  surveyResponse SurveyResponse @relation(fields: [surveyResponseId], references: [id])
  surveyResponseId String
  question Question @relation(fields: [questionId], references: [id])
  questionId String
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  answer QuestionAnswer[]
}

model QuestionAnswer {
  id          String  @id @default(uuid())
  questionResponse QuestionResponse @relation(fields: [questionResponseId], references: [id])
  questionResponseId String
  questionOption QuestionOption? @relation(fields: [questionOptionId], references: [id])
  questionOptionId String?
  question Question @relation(fields: [questionId], references: [id])
  questionId String
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  textAnswer String?
}

model User {
  id    String       @id 
  email String       @unique
  first_name String
  last_name String
  last_sign_in_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime
  quizzes Quiz[]
}

